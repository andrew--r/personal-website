---json
{
  "layout": "base",
  "title": "Writing",
  "description": "Articles and notes on everything",
  "alternates": [
    {
      "href": "/writing/feed.xml",
      "type": "application/atom+xml"
    }
  ]
}
---

<div class="content">
  <h1>{{ title }} <sup><a class="caps" href="feed.xml">RSS</a></sup></h1>

  {% for year, posts in collections.writing | groupByPublicationYear %}
  <section>
    <h2>{{ year }}</h2>

    <table class="dated-table">
      <tbody>
        {% for post in posts %}
          <tr>
            <td>
              <time datetime="{{ post.date | dateToIsoString }}">{% formatShortDate post.date %}</time>
            </td>
            <td>
              <a href="{{ post.url }}">{{ post.data.title }}</a> {{ 'â˜…' if 'favouriteNotes' in post.data.tags }}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </section>
  {% endfor %}
</div>
